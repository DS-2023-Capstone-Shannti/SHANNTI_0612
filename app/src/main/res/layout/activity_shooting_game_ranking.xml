<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="846dp"
    android:layout_height="411dp"
    tools:context=".MainActivity"
    app:srcCompat="@drawable/shooting_ranking_background"
    android:screenOrientation="landscape">

    <RelativeLayout
        android:id="@+id/android_calendar"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/shooting_ranking_background"
        android:clipToOutline="true"
        tools:ignore="MissingConstraints,RedundantNamespace,UnusedAttribute"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">


    <View
        android:id="@+id/img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

    <ListView
        android:id="@+id/listViewRanking"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/img"
        android:divider="@null"
        android:dividerHeight="0dp" />

        <Switch
            android:id="@+id/rank_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="임영웅을 잡아라 랭킹 보기" />

</RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

