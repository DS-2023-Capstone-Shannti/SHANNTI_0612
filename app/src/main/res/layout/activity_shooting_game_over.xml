<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="846dp"
    android:layout_height="411dp"
    tools:context=".MainActivity"
    app:srcCompat="@drawable/shooting_game_over"
    android:screenOrientation="landscape">

    <RelativeLayout
        android:id="@+id/android_main"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/shooting_game_over"
        android:clipToOutline="true"
        tools:ignore="MissingConstraints,RedundantNamespace,UnusedAttribute"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/rrocket"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginLeft="382dp"
                android:layout_marginTop="33dp"
                android:src="@drawable/rocket1" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginBottom="64dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="122dp"
                android:layout_marginLeft="0dp"
                android:id="@+id/tvPoints"
                android:text=""
                android:textColor="#228AED"
                android:fontFamily="@font/digitalt"
                android:textSize="35sp"/>
        </LinearLayout>
        <View
            android:id="@+id/overlay_exit"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginLeft="360dp"
            android:layout_marginTop="320dp"
            android:background="@android:color/transparent"
            android:onClick="exit" />
        <View
            android:id="@+id/overlay_again"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginLeft="360dp"
            android:layout_marginTop="270dp"
            android:background="@android:color/transparent"/>

        <Button
            android:id="@+id/shootRanking"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="725dp"
            android:background="@android:color/transparent"/>


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>