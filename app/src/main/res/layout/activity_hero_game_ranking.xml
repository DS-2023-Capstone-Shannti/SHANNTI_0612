<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="846dp"
    android:layout_height="411dp"
    tools:context=".LoginActivity"
    app:srcCompat="@drawable/hero_ranking_background"
    android:screenOrientation="landscape">

    <RelativeLayout
        android:id="@+id/android_main"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/hero_ranking_background"
        android:clipToOutline="true"
        tools:ignore="MissingConstraints,RedundantNamespace,UnusedAttribute"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">



        <ListView
            android:id="@+id/ranking_list_view"
            android:layout_width="500dp"
            android:layout_height="300dp"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="160dp"
            android:divider="@null"
            android:dividerHeight="0dp" />

        <Switch
            android:id="@+id/rank_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="580dp"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/bmhannapro"
            android:textSize="18dp"
            android:text="" />
        <View
            android:id="@+id/overlay_home_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="780dp"
            android:layout_marginTop="6dp"
            android:background="@android:color/transparent" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>