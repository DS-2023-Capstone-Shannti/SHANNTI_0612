<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/android_lar"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clipToOutline="true"
        android:background="@drawable/login"
        tools:ignore="MissingConstraints,RedundantNamespace,UnusedAttribute" >

        <EditText
            android:id="@+id/Edt_input_id"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textSize="13dp"
            android:layout_marginTop="112dp"
            android:layout_marginLeft="250dp"
            android:fontFamily="@font/bmhannapro"
            android:hint="이메일"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="#000000"
            android:textColorHint="@android:color/transparent" />

        <EditText
            android:id="@+id/Edt_input_pw"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textSize="13dp"
            android:layout_marginTop="188dp"
            android:layout_marginLeft="250dp"
            android:fontFamily="@font/bmhannapro"
            android:hint="비밀번호"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="#000000"
            android:textColorHint="@android:color/transparent" />

        <Button
            android:id="@+id/Btn_login"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:fontFamily="@font/myfont"
            android:padding="10dp"

            android:textColor="#ffffff"
            android:textSize="7sp"
            android:textStyle="bold"
            android:layout_marginTop="260dp"
            android:layout_marginLeft="250dp"/>

        <Button
            android:id="@+id/Btn_go_signup"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="433dp"
            android:layout_marginTop="348dp"
            android:background="@android:color/transparent"
            android:onClick="onButtonClick"
            android:padding="10dp" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>